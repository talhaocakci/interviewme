name: Deploy to S3 and CloudFront

on:
  push:
    branches:
      - main
      - production
  workflow_dispatch:

# Required for OIDC
permissions:
  id-token: write   # Required for requesting the JWT
  contents: read    # Required for actions/checkout

env:
  NODE_VERSION: '18'
  AWS_REGION: 'us-east-1'
  AWS_SECRET_NAME: 'chatvideo-app-secrets-dev'  # Update this to match your secret name
  AWS_ROLE_ARN: 'arn:aws:iam::ACCOUNT_ID:role/chatvideo-github-actions-dev'  # Update with your role ARN

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Configure AWS credentials via OIDC
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: ${{ env.AWS_ROLE_ARN }}
          role-session-name: GitHubActions-${{ github.run_id }}
          aws-region: ${{ env.AWS_REGION }}

      - name: Fetch secrets from AWS Secrets Manager
        id: secrets
        run: |
          SECRET_JSON=$(aws secretsmanager get-secret-value \
            --secret-id ${{ env.AWS_SECRET_NAME }} \
            --query SecretString \
            --output text)
          
          # Parse JSON and set as output
          echo "API_BASE_URL=$(echo $SECRET_JSON | jq -r '.API_BASE_URL')" >> $GITHUB_OUTPUT
          echo "WS_URL=$(echo $SECRET_JSON | jq -r '.WS_URL')" >> $GITHUB_OUTPUT
          echo "S3_BUCKET_NAME=$(echo $SECRET_JSON | jq -r '.S3_BUCKET_NAME')" >> $GITHUB_OUTPUT
          echo "CLOUDFRONT_DISTRIBUTION_ID=$(echo $SECRET_JSON | jq -r '.CLOUDFRONT_DISTRIBUTION_ID')" >> $GITHUB_OUTPUT
          
          # Mask sensitive values in logs
          echo "::add-mask::$(echo $SECRET_JSON | jq -r '.API_BASE_URL')"
          echo "::add-mask::$(echo $SECRET_JSON | jq -r '.WS_URL')"

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: mobile/package-lock.json

      - name: Install dependencies
        working-directory: ./mobile
        run: npm ci

      - name: Create production .env file
        working-directory: ./mobile
        run: |
          cat > .env << EOF
          API_BASE_URL=${{ steps.secrets.outputs.API_BASE_URL }}
          WS_URL=${{ steps.secrets.outputs.WS_URL }}
          EOF

      - name: Build web app
        working-directory: ./mobile
        run: |
          npx expo export --platform web --output-dir ./web-build

      - name: Sync to S3
        working-directory: ./mobile
        run: |
          aws s3 sync ./web-build s3://${{ steps.secrets.outputs.S3_BUCKET_NAME }} \
            --delete \
            --cache-control "public, max-age=31536000, immutable" \
            --exclude "*.html" \
            --exclude "asset-manifest.json"
          
          # HTML files with shorter cache for updates
          aws s3 sync ./web-build s3://${{ steps.secrets.outputs.S3_BUCKET_NAME }} \
            --exclude "*" \
            --include "*.html" \
            --include "asset-manifest.json" \
            --cache-control "public, max-age=0, must-revalidate"

      - name: Invalidate CloudFront cache
        run: |
          aws cloudfront create-invalidation \
            --distribution-id ${{ steps.secrets.outputs.CLOUDFRONT_DISTRIBUTION_ID }} \
            --paths "/*"

      - name: Deployment summary
        run: |
          echo "### Deployment Complete! ðŸš€" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- **S3 Bucket**: ${{ steps.secrets.outputs.S3_BUCKET_NAME }}" >> $GITHUB_STEP_SUMMARY
          echo "- **CloudFront Distribution**: ${{ steps.secrets.outputs.CLOUDFRONT_DISTRIBUTION_ID }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Region**: ${{ env.AWS_REGION }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Commit**: ${{ github.sha }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Secrets Source**: AWS Secrets Manager" >> $GITHUB_STEP_SUMMARY

